extends ../layout


block content
    .container
        form.form-horizontal(method='post',action='/admin/movie/add')
            input(type='hidden',name='movie[_id]',value='#{movie._id}')
            .form-group
                label.col-md-3.control-label 电影名字
                .col-md-9
                    input.form-control(type='text',name='movie[title]' value='#{movie.title}')
            .form-group
                label.col-md-3.control-label 导演
                .col-md-9
                    input.form-control(type='text',name='movie[director]' value='#{movie.director}')
            .form-group
                label.col-md-3.control-label 国家
                .col-md-9
                    input.form-control(type='text',name='movie[country]' value='#{movie.country}')
            .form-group
                label.col-md-3.control-label 语言
                .col-md-9
                    input.form-control(type='text',name='movie[language]' value='#{movie.language}')
            .form-group
                label.col-md-3.control-label 上映年份
                .col-md-9
                    input.form-control(type='text',name='movie[year]' value='#{movie.year}')
            .form-group
                label.col-md-3.control-label 简介
                .col-md-9
                    input.form-control(type='text',name='movie[summary]' value='#{movie.summary}')
            .form-group
                label.col-md-3.control-label 海报地址
                .col-md-9
                    input.form-control(type='text',name='movie[poster]' value='#{movie.poster}')
            .form-group
                label.col-md-3.control-label 片源地址
                .col-md-9
                    input.form-control(type='text',name='movie[flash]' value='#{movie.flash}')
            .form-group
                .col-md-9.col-md-offset-3
                    button.btn.btn-primary(type='submit') 录入


